<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.gxx0710.p1.MainActivity">

    <ImageView
        android:id="@+id/nanjing1_image_view"
        android:src="@drawable/nanjing1"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text1_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nanjing1_image_view"
        android:textColor="#424242"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:textSize="20sp"
        android:background="#FFFFFF"
        android:text="Nanjing" />

    <ImageView
        android:id="@+id/nanjing2_image_view"
        android:src="@drawable/nanjing2"
        android:layout_below="@id/text1_text_view"
        android:layout_width="150dp"
        android:layout_height="102dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/beach_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CITY CENTER"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:layout_toRightOf="@id/nanjing2_image_view"
        android:layout_below="@id/text1_text_view"
        android:background="#64B5F6"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/california_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nanjing2_image_view"
        android:layout_below="@id/beach_text_view"
        android:text="Xuan Wu"
        android:background="#90CAF9"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:textAppearance="?android:textAppearanceSmall" />

    <TextView
        android:id="@+id/text4_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nanjing2_image_view"
        android:layout_below="@id/california_text_view"
        android:text="NUST"
        android:background="#BBDEFB"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:textAppearance="?android:textAppearanceSmall" />

    <ImageView
        android:id="@+id/lele_image_view"
        android:src="@drawable/lele"
        android:layout_below="@id/nanjing2_image_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_width="200dp"
        android:layout_height="102dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="LE LE"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:textAppearance="?android:textAppearanceLarge" />
</RelativeLayout>
